Case(
  IsEmpty( _number ) or _base < 2 or _base > 36; "";

  Let(
    [
      k = Length( _number )
    ];
    
    ( Position(
        "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"; 
        Left( _number; 1 );
        1;
        1
      ) - 1 ) * ( _base ^ ( k - 1 ) )
    + nump.NumberToDecimal( Right( _number; k - 1 ); _base )
  )
)
