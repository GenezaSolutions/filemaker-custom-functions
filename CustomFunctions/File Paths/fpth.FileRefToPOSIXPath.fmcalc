// Converts a file reference (as used by some FileMaker script steps) into a
//   POSIX path.

Let(
  [
    $StartupDrive = Case(
      Abs( Get( SystemPlatform ) ) = 1;
      Get( SystemDrive );
      ""
    );

    $SearchStr = fpth.OSProtocol & $StartupDrive;
    $ReplStr = "/"
  ];

  Substitute( _fileRef; $SearchStr; $ReplStr )
)
